<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <!-- Authentication Fragments -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.healthcareapppd.presentation.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.healthcareapppd.presentation.ui.auth.AuthFragment"
        android:label="Register"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_register_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Home and Main Fragments -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.healthcareapppd.presentation.ui.user.Home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_home_to_docter"
            app:destination="@id/navigation_docter" />
        <action
            android:id="@+id/action_home_to_map"
            app:destination="@id/navigation_map" />
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/navigation_home"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.healthcareapppd.presentation.ui.user.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_viewPatientProfileFragment"
            app:destination="@id/viewPatientProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notification"
        android:name="com.example.healthcareapppd.presentation.ui.user.reminder.ReminderListFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/reminder_fragment_item_list">
        <action
            android:id="@+id/action_reminderList_to_addReminder"
            app:destination="@id/addReminderFragment" />
        <action
            android:id="@+id/action_reminderList_to_editReminder"
            app:destination="@id/editReminderFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/addReminderFragment"
        android:name="com.example.healthcareapppd.presentation.ui.user.reminder.AddReminderFragment"
        android:label="Thêm Nhắc Nhở"
        tools:layout="@layout/reminder_fragment_add_item" />
    
    <fragment
        android:id="@+id/editReminderFragment"
        android:name="com.example.healthcareapppd.presentation.ui.user.reminder.EditReminderFragment"
        android:label="Sửa Nhắc Nhở"
        tools:layout="@layout/reminder_fragment_edit_item">
        <argument
            android:name="reminder_id"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="description"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="reminder_type"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="cron_expression"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_reports"
        android:name="com.example.healthcareapppd.presentation.ui.user.Report.ReportFragment"
        android:label="@string/title_report"
        tools:layout="@layout/fragment_report">

        <action
            android:id="@+id/action_reportFragment_to_bmiCalculatorFragment"
            app:destination="@id/bmiCalculatorFragment" />
        
        <action
            android:id="@+id/action_reportFragment_to_healthChartFragment"
            app:destination="@id/healthChartFragment" />

    </fragment>
    
    <fragment
        android:id="@+id/healthChartFragment"
        android:name="com.example.healthcareapppd.presentation.ui.user.chart.HealthChartFragment"
        android:label="Biểu đồ sức khỏe"
        tools:layout="@layout/fragment_health_chart" />

    <fragment
        android:id="@+id/bmiCalculatorFragment"
        android:name="com.example.healthcareapppd.presentation.ui.user.bmi.BmiCalculatorFragment"
        android:label="BMI Calculator"
        tools:layout="@layout/fragment_bmi_calculator" />

    <fragment
        android:id="@+id/navigation_docter"
        android:name="com.example.healthcareapppd.presentation.ui.user.Docter.DocterFragment"
        android:label="Doctor"
        tools:layout="@layout/docter_ffragment_item_list" >

        <action
            android:id="@+id/action_docter_to_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_docter_to_detail"
            app:destination="@id/navigation_docter_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_docter_detail"
        android:name="com.example.healthcareapppd.presentation.ui.user.Docter.DetailDocterFragment"
        android:label="Doctor Detail"
        tools:layout="@layout/fragment_detail_docter" >

        <argument
            android:name="doctor"
            app:argType="java.io.Serializable" />

        <action
            android:id="@+id/action_detailDocter_to_chat"
            app:destination="@id/chatFragment" />

    </fragment>

    <fragment
        android:id="@+id/navigation_messageListFragment"
        android:name="com.example.healthcareapppd.presentation.ui.chat.MessageListFragment"
        android:label="Danh sách tin nhắn"
        tools:layout="@layout/fragment_message_list">
        <action
            android:id="@+id/action_messageList_to_chat"
            app:destination="@id/chatFragment" />
    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.healthcareapppd.presentation.ui.chat.ChatFragment"
        android:label="Chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.healthcareapppd.presentation.ui.map.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />

    <!-- Patient Profile Fragments -->
    <fragment
        android:id="@+id/viewPatientProfileFragment"
        android:name="com.example.healthcareapppd.presentation.ui.user.Profile.ViewPatientProfileFragment"
        android:label="Xem Hồ Sơ Bệnh Nhân"
        tools:layout="@layout/fragment_view_patient_profile">
        <action
            android:id="@+id/action_viewPatientProfileFragment_to_editPatientProfileFragment"
            app:destination="@id/editPatientProfileFragment" />
        <action
            android:id="@+id/action_viewPatientProfileFragment_to_createPatientProfileFragment"
            app:destination="@id/createPatientProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/createPatientProfileFragment"
        android:name="com.example.healthcareapppd.presentation.ui.user.Profile.CreatePatientProfileFragment"
        android:label="Tạo Hồ Sơ Bệnh Nhân"
        tools:layout="@layout/fragment_create_patient_profile">
        <action
            android:id="@+id/action_createProfile_to_viewProfile"
            app:destination="@id/viewPatientProfileFragment"
            app:popUpTo="@id/createPatientProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/editPatientProfileFragment"
        android:name="com.example.healthcareapppd.presentation.ui.user.Profile.EditPatientProfileFragment"
        android:label="Sửa Hồ Sơ Bệnh Nhân"
        tools:layout="@layout/fragment_edit_patient_profile">
        <action
            android:id="@+id/action_editProfile_to_viewProfile"
            app:destination="@id/viewPatientProfileFragment"
            app:popUpTo="@id/editPatientProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>
