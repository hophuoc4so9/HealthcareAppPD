<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái được chọn (Selected/Active) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#2196F3" /> <!-- Màu nền xanh cho trạng thái được chọn -->
        </shape>
    </item>

    <!-- Trạng thái mặc định (Default/Inactive) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@android:color/white" />
            <stroke android:width="1dp" android:color="#E0E0E0" /> <!-- Viền xám nhạt -->
        </shape>
    </item>
</selector>
