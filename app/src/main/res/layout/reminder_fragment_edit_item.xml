<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Thanh công cụ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorSurface">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hủy"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Sửa Nhắc Hẹn"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Cập nhật"
                android:textColor="@color/primary_blue"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Time Picker -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Các tùy chọn -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Lặp lại -->
                <TextView
                    android:id="@+id/tv_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Lặp lại"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                    android:drawablePadding="8dp" />

                <!-- Danh sách thứ (ẩn mặc định) -->
                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/layout_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:justifyContent="center"
                    android:visibility="gone"
                    android:paddingVertical="8dp">

                    <CheckBox
                        android:id="@+id/cb_mon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thứ hai" />

                    <CheckBox
                        android:id="@+id/cb_tue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thứ ba" />

                    <CheckBox
                        android:id="@+id/cb_wed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thứ tư" />

                    <CheckBox
                        android:id="@+id/cb_thu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thứ năm" />

                    <CheckBox
                        android:id="@+id/cb_fri"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thứ sáu" />

                    <CheckBox
                        android:id="@+id/cb_sat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thứ bảy" />

                    <CheckBox
                        android:id="@+id/cb_sun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chủ nhật" />
                </com.google.android.flexbox.FlexboxLayout>

                <!-- Nhãn -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_label"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhãn"
                    android:layout_margin="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Âm thanh -->
                <TextView
                    android:id="@+id/tv_sound"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:text="Âm thanh: Mặc định"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:drawableEnd="@drawable/baseline_lock_open_24"
                    android:drawablePadding="8dp" />

                <!-- Báo lại -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Báo lại"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_snooze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nút xóa -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa nhắc hẹn"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_margin="16dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
