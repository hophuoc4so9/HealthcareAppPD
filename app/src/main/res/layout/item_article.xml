<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Sử dụng RelativeLayout để dễ dàng định vị nút Lưu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Image and Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Image Section (Fixed width for image on the left) -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/iv_article_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Hình ảnh bài viết"
                    android:src="@drawable/ic_doctor"
                    tools:src="@tools:sample/avatars"/>
            </androidx.cardview.widget.CardView>


            <!-- Content Section (Title and Date on the right) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/tv_article_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="10 cách đơn giản để tăng cường hệ miễn dịch trong mùa lạnh và tăng sức đề kháng" />

                <!-- Date/Meta -->
                <TextView
                    android:id="@+id/tv_article_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"
                    tools:text="05/10/2025" />
            </LinearLayout>

        </LinearLayout>

        <!-- Bookmark/Save Icon -->
<!--        <ImageView-->
<!--            android:id="@+id/iv_article_bookmark"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_marginTop="12dp"-->
<!--            android:layout_marginEnd="12dp"-->
<!--            android:padding="4dp"-->
<!--            android:contentDescription="Lưu bài viết"-->
<!--            android:src="@drawable/ic_bookmark_border"-->
<!--            app:tint="@color/text" />-->

    </RelativeLayout>
</androidx.cardview.widget.CardView>
